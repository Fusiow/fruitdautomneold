<script type="text/javascript">
    //<![CDATA[
    window.payoneTooltipPopup = new Array();

    function payoneTooltipShow(elementId, elementTitle) {
        var windowHeight = document.viewport.getHeight() - 150;
        var windowWidth = document.viewport.getWidth() - 100;
        if (windowWidth > 1024) {
            windowWidth = 1024;
        }
        if (windowHeight > 768) {
            windowHeight = 768;
        }
        var windowOptions = {
            className:"payone",
            title:elementTitle,
            top:70,
            left:100,
            minWidth:600,
            minHeight:300,
            width:windowWidth,
            height:windowHeight,
            zIndex:100,
            resizable:false,
            closeable:true,
            recenterAuto:true,
            draggable:false,
            destroyOnClose:true,
            /// showEffect:Effect.Appear,
            // hideEffect:Effect.Fade,
            showEwindowOptionsptions:{
                duration:1.0
            }
        };
        window.payoneTooltipPopup[elementId] = new Window(windowOptions);
        window.payoneTooltipPopup[elementId].setContent($(elementId));
        window.payoneTooltipPopup[elementId].showCenter(true, 50);
    }
    //]]>
</script>