/**
 * @var $this Payone_Core_Block_Adminhtml_System_Config_Tooltip
 */
$hint = $this->getHintHtml();
$hintText = $this->getHintText() == ''? '&nbsp;': $this->getHintText();
$title = $this->getTitle();
$id = md5('payone-config-hint-content' . $hint . $title);
$idHint = "payone-config-hint-" . $id;
$idContent = "payone-config-hint-content-" . $id;
?>
<div class="payone-config-hint-container">
    <div id="<?php echo $idHint ?>" class="payone-config-hint"
         onclick="payoneTooltipShow('<?php echo $idContent ?>', '<?php echo $title ?>');">
        <?php echo $hintText ?>
    </div>
    <div style="display: none !important;">
        <div id="<?php echo $idContent ?>" class="payone-config-hint-content">
            <?php echo $hint ?>
        </div>
    </div>
</div>