<config>
    <modules>
        <Payone_Migrator>
            <version>3.1.2</version>
        </Payone_Migrator>
    </modules>

    <global>
        <blocks>
            <payone_migrator>
                <class>Payone_Migrator_Block</class>
            </payone_migrator>
        </blocks>

        <helpers>
            <payone_migrator>
                <class>Payone_Migrator_Helper</class>
            </payone_migrator>
        </helpers>

        <models>
            <payone_migrator>
                <class>Payone_Migrator_Model</class>
            </payone_migrator>
        </models>

        <rewrite>
            <!-- Rewrite controller action to integrator migrator -->
            <payone_migrator_wizard_migration>
                <from><![CDATA[#^/payone_core/adminhtml_configuration_wizard_page/index#]]></from>
                <to>/payone_migrator/adminhtml_wizard_migration/index</to>
            </payone_migrator_wizard_migration>
        </rewrite>

    </global>

    <admin>
        <routers>
            <payone_migrator>
                <use>admin</use>
                <args>
                    <module>Payone_Migrator</module>
                    <frontName>payone_migrator</frontName>
                </args>
            </payone_migrator>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <payone_migrator>
                    <file>payone/migrator.xml</file>
                </payone_migrator>
            </updates>
        </layout>

        <translate>
            <modules>
                <Payone_Migrator>
                    <files>
                        <default>Payone_Migrator.csv</default>
                    </files>
                </Payone_Migrator>
            </modules>
        </translate>

    </adminhtml>

</config>